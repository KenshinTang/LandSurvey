<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".fragments.DrawerFragment">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TabLayout
            android:id="@+id/tablayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="#CCBFBFBF"
            app:tabIndicatorColor="#3FD8B4"
            app:tabIndicatorHeight="3dp"
            app:tabMaxWidth="120dp"
            app:tabMinWidth="120dp"
            app:tabSelectedTextColor="#3FD8B4"
            app:tabTextColor="#3B445A"
            app:tabTextAppearance="@font/dinbold"/>

    </android.support.v4.view.ViewPager>

</FrameLayout>