<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.OperationFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="360dp"
        android:layout_height="720dp">


        <ImageView
            android:id="@+id/imageView_GPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginTop="75dp"
            android:src="@drawable/satellitedish_dis"
            android:clickable="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_Latlng"
            android:layout_width="199dp"
            android:layout_height="33dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/dinbold"
            android:text="28.349840, 107.523492"
            android:textColor="#3B445A"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView_GPS" />

        <TextView
            android:id="@+id/textView_GPS_status"
            android:layout_width="165dp"
            android:layout_height="41dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/gps_is_ready"
            android:textColor="#3B445A"
            android:textSize="14sp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_Latlng" />

        <View
            android:id="@+id/view_divider1"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="8dp"
            android:background="#FFC5C5C5"
            android:clickable="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_GPS_status" />

        <View
            android:id="@+id/view_divider2"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_marginTop="90dp"
            android:background="#FFC5C5C5"
            android:clickable="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_divider1" />

        <View
            android:id="@+id/view_divider3"
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="#FFC5C5C5"
            android:clickable="false"
            app:layout_constraintBottom_toBottomOf="@+id/view_divider2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view_divider1" />

        <TextView
            android:id="@+id/textView_area_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginBottom="15dp"
            android:textSize="14sp"
            android:text="@string/area"
            android:textColor="#FF3B445A"
            app:layout_constraintBottom_toBottomOf="@+id/view_divider2"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView_perimeter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginBottom="15dp"
            android:text="@string/perimeter"
            android:textColor="#FF3B445A"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/view_divider2"
            app:layout_constraintStart_toEndOf="@+id/textView_area_title" />

        <TextView
            android:id="@+id/textView_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/dinbold"
            android:text="214.15ãŽ¡"
            android:textColor="#FF4A4A4A"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_divider1"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView_perimeter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/dinbold"
            android:text="5000.43mi"
            android:textColor="#FF4A4A4A"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/view_divider3"
            app:layout_constraintTop_toTopOf="@+id/view_divider1" />

        <LinearLayout
            android:id="@+id/linear_auto_buttons"
            android:layout_width="300dp"
            android:layout_height="54dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_divider2">

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/imageButton_auto_start"
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:paddingBottom="10dp"
                android:paddingStart="0dp"
                android:paddingEnd="20dp"
                android:paddingTop="10dp"
                fancy:fb_borderColor="#FFFFFF"
                fancy:fb_borderWidth="1dp"
                fancy:fb_defaultColor="#3FD8B4"
                fancy:fb_focusColor="#3FD8B4"
                fancy:fb_iconResource="@drawable/play"
                fancy:fb_iconPosition="left"
                fancy:fb_radius="27dp"
                fancy:fb_text="@string/start_measuring"
                fancy:fb_textColor="#FFFFFF"
                fancy:fb_textSize="18sp"
                fancy:fb_iconPaddingTop="5dp"
                fancy:fb_iconPaddingLeft="1dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_piling_buttons"
            android:layout_width="300dp"
            android:layout_height="54dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_divider2">

            <ImageView
                android:id="@+id/imageButton_piling_undo"
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@drawable/undo"
                android:clickable="true"
                android:background="@android:color/transparent"
                />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/imageButton_piling_start"
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"

                android:paddingBottom="10dp"
                android:paddingStart="0dp"
                android:paddingEnd="20dp"
                android:paddingTop="10dp"
                fancy:fb_borderColor="#FFFFFF"
                fancy:fb_borderWidth="1dp"
                fancy:fb_defaultColor="#3FD8B4"
                fancy:fb_focusColor="#3FD8B4"
                fancy:fb_iconResource="@drawable/btn_thumb_tack"
                fancy:fb_iconPosition="left"
                fancy:fb_radius="27dp"
                fancy:fb_text="@string/start_piling"
                fancy:fb_textColor="#FFFFFF"
                fancy:fb_textSize="18sp"
                fancy:fb_iconPaddingTop="5dp"
                fancy:fb_iconPaddingLeft="1dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_manual_buttons"
            android:layout_width="300dp"
            android:layout_height="54dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_divider2">

            <ImageView
                android:id="@+id/imageButton_manual_undo"
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@drawable/undo"
                android:clickable="true"
                android:background="@android:color/transparent"
                />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/imageButton_manual_start"
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"

                android:paddingBottom="10dp"
                android:paddingStart="0dp"
                android:paddingEnd="20dp"
                android:paddingTop="10dp"
                fancy:fb_borderColor="#FFFFFF"
                fancy:fb_borderWidth="1dp"
                fancy:fb_defaultColor="#3FD8B4"
                fancy:fb_focusColor="#3FD8B4"
                fancy:fb_iconResource="@drawable/hand"
                fancy:fb_iconPosition="left"
                fancy:fb_radius="27dp"
                fancy:fb_text="@string/start_manual"
                fancy:fb_textColor="#FFFFFF"
                fancy:fb_textSize="18sp"
                fancy:fb_iconPaddingTop="5dp"
                fancy:fb_iconPaddingLeft="1dp"/>
        </LinearLayout>

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/imageButton_show_history"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear_auto_buttons"

            android:paddingBottom="10dp"
            android:paddingStart="-40dp"
            android:paddingEnd="-20dp"
            android:paddingTop="-10dp"
            fancy:fb_defaultColor="@android:color/transparent"
            fancy:fb_focusColor="@android:color/transparent"
            fancy:fb_iconResource="@drawable/history"
            fancy:fb_iconPosition="left"
            fancy:fb_text="History Record"
            fancy:fb_textColor="#3B445A"
            fancy:fb_textSize="14sp"
            fancy:fb_iconPaddingTop="2dp"
            fancy:fb_iconPaddingRight="0dp"
            />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>